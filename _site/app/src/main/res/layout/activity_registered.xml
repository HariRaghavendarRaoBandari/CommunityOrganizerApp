<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/Congrats"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp" />
    <TextView
            android:layout_width="200dp"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:text="@string/Signup_Details"
            android:id="@+id/textView1"
            android:layout_below="@+id/textView"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        > 
    	<TextView 
    	    android:id="@+id/etEmail"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	      	android:background="@drawable/edittext_top_bg"
	        android:padding="10dp"
	        android:hint="@string/etEmail"
	        android:textColorHint="#bbbbbb"
	        android:drawableStart="@drawable/email"/>
    	<TextView 
    	    android:id="@+id/etUserName"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:background="@drawable/edittext_default_bg"
	       	android:layout_marginTop="-2dp"
	        android:padding="10dp"
	        android:hint="@string/etUserName"
	        android:textColorHint="#bbbbbb"
	        android:drawableStart="@drawable/user"/>
    	<TextView 
    	    android:id="@+id/etGender"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:background="@drawable/edittext_default_bg"
	       	android:layout_marginTop="-2dp"
	        android:padding="10dp"
	        android:textColorHint="#bbbbbb"
	        android:hint="@string/etGender"
	        android:drawableStart="@drawable/user" />

    	<TextView
    	    android:id="@+id/etdob"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="-2dp"
    	    android:background="@drawable/edittext_default_bg"
    	    android:drawableStart="@drawable/dob"
    	    android:ems="10"
    	    android:hint="@string/etdob"
    	    android:padding="10dp"
    	    android:textColorHint="#bbbbbb" />
 
	     <TextView 
    	    android:id="@+id/etphone_no"
	       	android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"
	       	android:background="@drawable/edittext_default_bg"
	       	android:layout_marginTop="-2dp"
	        android:padding="10dp"
	        android:textColorHint="#bbbbbb"
	        android:hint="@string/etphone_no"
	        android:drawableStart="@drawable/phone" /> 
	     
        <Button 
	       	android:id="@+id/btkSignIn"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_margin="4dp"
	       	android:text="@string/btkSignIn"
	        style="@style/DefaultButtonText"
	       	android:background="@drawable/button_default_bg"
	       />
        
        </LinearLayout>

</RelativeLayout>
