<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="#3cb879">

    <LinearLayout
        style="@style/LoginFormContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="top|center"
            android:contentDescription="@string/logoDesc"
            android:background="@mipmap/ic_launcher_organizer"
            android:minHeight="150sp"
            android:minWidth="150sp"
            android:theme="@style/ChatAppTheme"
            android:nestedScrollingEnabled="true" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:padding="12sp"
            android:hint="@string/etEmail"
            android:textColorHint="#000000"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_action_mail"
            android:theme="@style/ChatAppTheme" />
    	<EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:layout_marginTop="10sp"
            android:padding="12sp"
            android:hint="@string/etPass"
            android:textColorHint="#000000"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_action_key"
            android:theme="@style/ChatAppTheme" />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="12sp"
            android:background="@color/bg_btn_Sign"
            android:textColor="@color/white"
            android:text="@string/btnSignIn"
            android:theme="@style/ChatAppTheme" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="12sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@color/bg_btn_Sign"
            android:textColor="@color/white"
            android:text="@string/btnCancel"
            android:theme="@style/ChatAppTheme" />
        </LinearLayout>
    <TextView
        android:id="@+id/txtError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

</RelativeLayout>

